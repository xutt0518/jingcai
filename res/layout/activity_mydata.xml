<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical" >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:id="@+id/data_image"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#ffffff" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="头像"
                    android:textSize="15sp"
                    android:textColor="@color/text_color" />			  
           	<com.jingcai.jingcaic.circular.imageview.CircularImage
                    android:id="@+id/data_imge"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/touxxiang" /> d
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9" />

            <RelativeLayout
                android:id="@+id/data_name"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="#ffffff" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="昵称"
                    android:textSize="15sp"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/aaa"
                    android:text="请输入昵称"
                    android:textColor="#a1a1a1"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/aaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9" />
			<RelativeLayout
                android:id="@+id/data_phone"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="电话"
                    android:textSize="15sp" 
                    android:textColor="@color/text_color"/>

              <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/bbb"
                    android:text="请输入电话"
                    android:textColor="#a1a1a1"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/bbb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                     />
            </RelativeLayout>
              <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9" />
			
            <RelativeLayout
                android:id="@+id/data_rq"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="出生日期"
                    android:textSize="15sp"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/text_rq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/ccc"
                    android:text="请选择出生日期"
                     android:textColor="#a1a1a1"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/ccc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                     />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="#e9e9e9" />

            <RelativeLayout
                android:id="@+id/data_truename"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="真实姓名"
                    android:textSize="15sp" 
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/text_truename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/ddd"
                    android:text="真实姓名"
                     android:textColor="#a1a1a1"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ddd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9" />

            <RelativeLayout
                android:id="@+id/data_xb"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="性别"
                    android:textSize="15sp" 
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/text_xb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/fff"
                    android:text="性别"
                    android:textColor="#a1a1a1"
                    android:textSize="15sp" />

                <ImageView
                    
                    android:id="@+id/fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                   />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9" />

            <RelativeLayout
                android:id="@+id/data_dz"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="地址"
                    android:textSize="15sp" 
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/text_dz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/hhh"
                    android:text="家庭地址"
                    android:textColor="#a1a1a1"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/hhh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                   />
            </RelativeLayout>
			<View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9" />
            <LinearLayout 
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:layout_marginTop="20dp"     
               android:orientation="vertical"
                    >
             <Button 
                    android:id="@+id/btn_logout"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_orange_side"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="退出登陆"/>
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>