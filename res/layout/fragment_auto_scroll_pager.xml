<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.jingcai.jingcaic.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/scroll_pager"
        android:layout_width="match_parent"
        android:layout_height="240dp"
         />
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/scroll_pager"
        android:gravity="center_vertical"
        android:background="@color/bg_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp" />


		<com.jingcai.jingcaic.autoscrollviewpager.viewpagerindicator.CirclePageIndicator 
		    android:id="@+id/indicator"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
		    />
        
    </LinearLayout>

</RelativeLayout>