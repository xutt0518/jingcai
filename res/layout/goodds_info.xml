<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cm" />

    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        
        <TextView 
            android:id="@+id/goods_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"           
            android:gravity="center"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="草莓"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView 
            android:id="@+id/image1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"        
            android:background="@color/gray"
           />
        <LinearLayout 
            android:id="@+id/favor_ly"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:orientation="vertical">
            <ImageView 
                android:id="@+id/goods_imge"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/xin"/>
            <TextView 
                android:id="@+id/goods_favor"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp"
                android:textSize="12sp"
                android:text="收藏"/>
        </LinearLayout>
    </LinearLayout>
        <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                >
                <TextView 
                    android:id="@+id/goods_stander"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="1袋(10斤)"/>
                <TextView 
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:layout_toRightOf="@id/goods_stander"
                    android:layout_alignBaseline="@id/goods_stander"
                    android:textSize="15sp"
                    android:text="￥1.4/斤"/>
                <TextView 
                    android:id="@+id/goods_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:layout_margin="3dp"
                    android:layout_below="@id/goods_stander"
                    android:textSize="17sp"
                    android:text="￥ 1.44"/>
            </RelativeLayout>
            <View 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView 
                android:id="@+id/add_car"
                android:layout_margin="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/jia"
                />
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>        
         <RelativeLayout 
            android:layout_width="70dp"
            android:layout_height="70dp"   
            >
            <ImageView 
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/banyuan"
                />
            <ImageView 
                android:id="@+id/gouwuche"
                android:layout_width="40dp"
                android:layout_height="40dp"
                 android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/car"
                />
            <TextView 
                android:layout_width="25dp"
                android:layout_height="25dp"
             	android:layout_above="@id/gouwuche"
             	android:layout_toRightOf="@id/gouwuche"
                android:textColor="#000000"
                android:background="@drawable/jhd"
                android:textSize="16sp"
                android:gravity="center"
                android:text="  1  "
                />
        </RelativeLayout>
</LinearLayout>













